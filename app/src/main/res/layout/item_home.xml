<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageProfileItem"
            android:src="@drawable/loadgif"
            android:layout_width="90dp"
            android:layout_height="70dp"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_margin="5dp"
                android:layout_gravity="left"
                android:gravity="left"
                android:textSize="20dp"
                android:text="name"
                android:id="@+id/nameItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_margin="5dp"
                android:layout_gravity="left"
                android:gravity="left"
                android:textSize="15dp"
                android:text="10:00pm"
                android:id="@+id/dateItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>


    </LinearLayout>

    <TextView
        android:padding="7dp"
        android:id="@+id/textPostItem"
        android:gravity="end"
        android:layout_marginTop="10dp"
        android:text="txtPost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageView
        android:scaleType="fitXY"
        android:layout_marginTop="5dp"
        android:id="@+id/imagePostItem"
        android:src="@drawable/loadgif"
        android:layout_width="match_parent"
        android:layout_height="450dp"/>

    <RelativeLayout
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textStyle="bold"

            android:textSize="18dp"
            android:id="@+id/pComment"
            android:layout_alignParentRight="true"
            android:text="comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textStyle="bold"
            android:textSize="18dp"
            android:id="@+id/pLikeCount"
            android:layout_gravity="end"
            android:text="like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
                android:id="@+id/btnLikePosts"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textSize="18dp"
            android:background="@drawable/is_like"
            android:layout_margin="3dp"
            android:text="Like"
            android:layout_weight="1"
            android:layout_width="150dp"
            android:layout_height="50dp" />

        <Button
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_margin="3dp"
            android:background="@drawable/is_like"
            android:textColor="@color/colorPrimary"
            android:text="Comment"
            android:layout_weight="1"
            android:layout_width="150dp"
            android:layout_height="50dp" />

        <Button
            android:id="@+id/sharePost"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:layout_margin="3dp"
            android:background="@drawable/is_like"
            android:text="Share"
            android:layout_weight="1"
            android:layout_width="150dp"
            android:layout_height="50dp" />

    </LinearLayout>




</LinearLayout>