<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HelloThreeActivity">

    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/d"
        android:id="@+id/imgskip"
        android:layout_width="20dp"
        android:layout_height="7dp"
        />
    <TextView
        android:textColor="#9F9F9F"
        android:textSize="12dp"
        android:textStyle="bold"
        android:text="Skip"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="26dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/textskip"
        android:layout_width="26dp"
        android:layout_height="17dp"/>
    <ImageView
        android:id="@+id/imghellothree"
        android:background="@drawable/h"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="300dp"
        android:layout_height="379dp"/>
    <Button
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="385dp"
        android:background="@drawable/shapbtnjoin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="112.67dp"
        android:layout_height="45dp"
        android:id="@+id/btn"/>
    />
    <TextView
        android:textColor="#000000"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="450dp"
        android:text="Invitations"
        android:textSize="40dp"
        android:textStyle="bold"
        android:id="@+id/textinvitations"
        android:layout_width="210dp"
        android:layout_height="56dp"/>
    <TextView
        android:gravity="center"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textinvitations"
        android:id="@+id/Ask"
        android:text="Ask people to join you onyour events"
        android:layout_width="174dp"
        android:layout_height="41dp"/>
    <Button
        android:text="Go it"
        android:textSize="20dp"
        android:textColor="#C80000"
        android:padding="10dp"
        android:background="@drawable/shapbtnnext"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="570dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/btngoithellothree"
        android:layout_width="112.67dp"
        android:layout_height="45dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>